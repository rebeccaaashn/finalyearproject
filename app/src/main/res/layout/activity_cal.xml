<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/bckg">

  <Button
      android:id="@+id/bckCal"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:text="Back"
      android:backgroundTint="#e9ffdb"
      android:textColor="@color/black"
      android:layout_marginLeft="15dp"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Count your calories"
      android:textSize="30dp"
      android:textStyle="bold"
      android:layout_marginLeft="15dp"
      android:layout_marginTop="50dp" />

  <ImageView
      android:id="@+id/imageView1"
      android:layout_width="50dp"
      android:layout_height="62dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="330dp"
      android:src="@drawable/kcal" />


  <EditText
      android:id="@+id/weightInput"
      android:layout_width="130dp"
      android:layout_height="60dp"
      android:layout_marginTop="175dp"
      android:layout_marginLeft="75dp"
      android:ems="10"
      android:hint="@string/defaultText"
      android:inputType="numberDecimal"
      android:textSize="13sp" />

  <Button
      android:id="@+id/maintButton"
      android:layout_width="75dp"
      android:layout_height="60dp"
      android:layout_marginTop="265dp"
      android:layout_marginLeft="170dp"
      android:text="Calculate"
      android:textSize="12sp" />

  <Button
      android:id="@+id/bulkButton"
      android:layout_width="75dp"
      android:layout_height="60dp"
      android:layout_marginTop="265dp"
      android:layout_marginLeft="275dp"
      android:text="Calculate"
      android:textSize="12sp" />

  <TextView
      android:id="@+id/textView4"
      android:layout_width="85dp"
      android:layout_height="15dp"
      android:layout_marginTop="250dp"
      android:layout_marginLeft="270dp"
      android:text="Gain Weight" />

  <Button
      android:id="@+id/cutButton"
      android:layout_width="75dp"
      android:layout_height="60dp"
      android:layout_marginTop="265dp"
      android:layout_marginLeft="50dp"
      android:text="Calculate"
      android:textSize="12sp" />

  <EditText
      android:id="@+id/heightInput"
      android:layout_width="130dp"
      android:layout_height="60dp"
      android:layout_marginTop="135dp"
      android:layout_marginLeft="75dp"
      android:ems="10"
      android:hint="@string/defaultText"
      android:inputType="numberDecimal"
      android:textSize="13sp" />

  <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="200dp"
      android:layout_marginLeft="15dp"
      android:text="Weight:"
      android:textStyle="bold"/>

  <TextView
      android:id="@+id/displayValue"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="500dp"
      android:layout_marginLeft="150dp"
      android:textSize="12pt" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="105dp"
      android:layout_height="15dp"
      android:layout_marginTop="250dp"
      android:layout_marginLeft="145dp"
      android:text="Maintain Weight" />

  <TextView
      android:id="@+id/textView1"
      android:layout_width="75dp"
      android:layout_height="15dp"
      android:layout_marginTop="250dp"
      android:layout_marginLeft="50dp"
      android:text="Cut Weight" />

  <EditText
      android:id="@+id/ageInput"
      android:layout_width="130dp"
      android:layout_height="60dp"
      android:layout_marginTop="90dp"
      android:layout_marginLeft="75dp"
      android:ems="10"
      android:hint="@string/defaultText"
      android:inputType="number"
      android:textSize="13sp" />

  <TextView
      android:id="@+id/textHeight"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="150dp"
      android:layout_marginLeft="15dp"
      android:text="Height:"
      android:textStyle="bold"/>

  <TextView
      android:id="@+id/textAge"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/imageView1"
      android:layout_marginTop="35dp"
      android:layout_marginLeft="15dp"
      android:text="Age:"
      android:textStyle="bold"/>

</RelativeLayout>